{
    "name": "trainzscript",
    "displayName": "TrainzScript",
    "description": "TrainzScript scripting language support for Trainz Simulator",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:trainzscript.init",
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "trainzscript.init",
                "title": "Initialize TrainzScript Project"
            }
        ],
        "configuration": {
            "title": "TrainzScript",
            "trainzscript.trainzUtilPath": {
                "description": "Path to TrainzUtil executable",
                "type": "string",
                "scope": "machine-overridable"
            },
            "trainzscript.defaultScriptsPath": {
                "description": "Path to standard scripts",
                "type": "string",
                "scope": "machine-overridable"
            },
            "trainzscript.additionalIncludeDirectories": {
                "description": "Additional include directories",
                "type": "array",
                "scope": "machine-overridable"
            }
        },
        "languages": [
            {
                "id": "trainzscript",
                "extensions": [".gs"]
            }
        ],
        "grammars": [
            {
                "language": "trainzscript",
                "scopeName": "source.trainzscript",
                "path": "./syntaxes/trainzscript.tmLanguage.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "trainzscript"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "eslint": "^7.6.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    }
}
